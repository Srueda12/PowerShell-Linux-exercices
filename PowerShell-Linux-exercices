curl https://jsonplaceholder.typicode.com/users
curl https://jsonplaceholder.typicode.com/users | jq


curl https://jsonplaceholder.typicode.com/posts
curl https://jsonplaceholder.typicode.com/posts | jq '.[].title'


import requests
import json

response = requests.get("https://jsonplaceholder.typicode.com/posts")


posts = json.loads(response.text)


post_id = 5
for post in posts:
    if post["id"] == post_id:
        print(json.dumps(post, indent=2))
        break


import requests
import json


new_post = {
    "title": "Nuevo post",
    "body": "Este es el contenido del nuevo post",
    "userId": 1
}

response = requests.post("https://jsonplaceholder.typicode.com/posts", json=new_post)

print(json.dumps(response.json(), indent=2))



import requests
import json

response = requests.get("https://jsonplaceholder.typicode.com/posts/999999")

if response.status_code == 200:
    print(json.dumps(response.json(), indent=2))
else:
  
    try:
        error_data = json.loads(response.text)
        error_message = error_data.get("error", "Un error inesperado ocurri√≥")
        print(f"Error: {error_message}")
    except (ValueError, KeyError):
        print("Error: No se pudo procesar la respuesta del servidor.")


